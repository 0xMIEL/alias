<main>
  <section class="wrapper wrapper--inline">
    <h1>
      Your game
    </h1>
    <button class="button" id="createGameBtn">
      Create Game
    </button>
  </section>
  <section class="wrapper wrapper--inline">
    <ul id="gameList" class="game-list">
      {{#each games as |game|}}
        <li class="game-tile">
          <h3 class="game-tile__id">
            <span class="text-14">
              ID
            </span>
            <span class="text-12">
              {{game._id}}
            </span>
          </h3>
          <p>Players: {{game.players.length}} / </p>
          <p>Team size: {{game.teamSize}}</p>
          <p>Round time: {{game.timePerRound}}</p>
          <p>Rounds: {{game.roundsTotal}}</p>


        </li>
      {{/each}}
    </ul>
  </section>

  <div id="gameModal" class="modal">
    <div class="modal-content">
      <span class="close">
        &times;
      </span>
      <h2>
        Game Properties
      </h2>
      <form id="createGameForm">
        <label for="playersPerTeam">
          Players per Team (2 - 4):
        </label>
        <input
          type="number"
          id="playersPerTeam"
          name="playersPerTeam"
          min="2"
          max="4"
          required
        />
        <br />

        <label for="timePerRound">
          Time per Round (minutes, 1 - 5):
        </label>
        <input
          type="number"
          id="timePerRound"
          name="timePerRound"
          min="1"
          max="5"
          required
        />
        <br />

        <label for="totalRounds">
          Total Rounds (1 - 5):
        </label>
        <input
          type="number"
          id="totalRounds"
          name="totalRounds"
          min="1"
          max="5"
          required
        />
        <br />

        <button type="submit" class="button">
          Create Game
        </button>
      </form>
    </div>
  </div>
</main>

<script src="/js/socket.io.js"></script>
<script src="/js/socket.js"></script>
<script src="/js/modal.js"></script>