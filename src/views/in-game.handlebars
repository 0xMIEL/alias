{{> navbar}}
<div class='new-game' id='in-game' data-game-id='{{gameRoom._id}}'>
  <div class="team-nav">

    <section class="team-container">
    <h2 class='team-name'>1</h2>
    <h1>Players: {{totalPlayersInTeam}}</h1>
    <div class="team-info">

     <ul>
      {{#each team1Usernames}}
        <li>Player: {{this}}</li>
      {{else}}
        <li>No players available</li> 
      {{/each}}
    </ul>

</div>
  </section>

  <section class='score'>
    <h3 id="score">Score 
      <span id="score-team1">0</span>
      <span>:</span>
      <span id="score-team2">0</span>
    </h3>
    <h3 id="round"></h3>
    <h3 >Team<span id="active-team"></span> turn </h3>
    <h3 >Player <span id="explanaitor"></span> explaining </h3>

    <h3 class="time" >Time left: <span id="timer"></span></h3>
  </section>

 <section class="team-container">
    <h2 class='team-name'>2</h2>
    <h1>Players: {{totalPlayersInTeam}}</h1>
    <div class="team-info">
    <ul>
      {{#each team2Usernames}}
        <li>Player: {{this}}</li>
      {{else}}
        <li>No players available</li> 
      {{/each}}
    </ul></div>
  </section>
    
  </section>
  </div>
  
  
  <section class='chatGame secret' id="secret-word">
    <p id="secret"></p>
  </section>
 <section class='chatGame explanation' id="chat-explanation">
    <ul class="chat-explanation__message-list" id="chat-explanation__message-list">
  
    </ul>
  </section>
  <section class='chatGame guess' id="chat-guess">
    <ul class="chat-guess__message-list" id="chat-guess__message-list">
    
    </ul>
  </section>
<form class="chat-form">
  <textarea id="chat-input-field" class="chatGame inputfield" rows="5" placeholder="Type your message here..."></textarea><br>
  <button type="submit" class='button chatSend' id="chat-send-button">Send</button>
</form>
  </div>
  
</div>
<script src='/js/inGame/handleGameFlow.js' type='module'></script>

{{> footer}}


